<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
<div style='background: lightpink; color: white; padding: 20px;  height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; '>
    {% for item in names %}
    <form method='POST' action='/organization/change/company'>
        <div style="padding-bottom: 16px">
        <label>
            <input name='id' value="{{ item.id }}" style = 'width: 250px; height: 50px; font-size: 20px; border-radius: 12px; background: white' readonly>
        </label>
        </div>
        <div style="padding-bottom: 16px">
            <label>
                <input name="name" value="{{ item.name }}" style = 'width: 250px; height: 50px; font-size: 20px; border-radius: 12px; background: white'>
            </label>
        </div>
        <button type='submit' style = 'width: 250px; height: 50px; font-size: 20px; border-radius: 12px; background: white'>Change</button>
    </form>
    {% endfor %}
</div>
</body>
</html>